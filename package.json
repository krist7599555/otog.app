{
  "name": "otog.app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:proxy": "concurrently --names \"SVELTE,POSTGRES\" -c \"bgBlue.bold,bgMagenta.bold\" \"pnpm:svelte:dev\" \"pnpm:fly:pg-proxy\"",
    "dev": "dotenv -e .env.prod -e .env -- vite dev",
    "svelte:dev": "vite dev",
    "build": "dotenv -e .env.prod -e .env -- prisma generate && dotenv -e .env.prod -e .env -- vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "start": "node ./build/index.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --write . && eslint . --fix",
    "fly:pg-proxy": "flyctl proxy 5432 -a otog-db",
    "db:push": "dotenv -e .env.prod -e .env -- prisma db push"
  },
  "devDependencies": {
    "@fontsource/noto-sans": "^4.5.11",
    "@fontsource/noto-sans-thai": "^4.5.12",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^1.0.0",
    "@sveltejs/kit": "^1.0.0",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "pnpm": "^7.19.0",
    "postcss": "^8.4.20",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "svelte": "^3.54.0",
    "svelte-check": "^2.9.2",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  },
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.238.0",
    "@prisma/client": "^4.8.0",
    "@sveltejs/adapter-node": "^1.0.0",
    "dotenv-cli": "^6.0.0",
    "fp-ts": "^2.13.1",
    "prisma": "^4.8.0",
    "zx": "^7.1.1"
  }
}
